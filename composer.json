{
  "name": "pebblecms/backoffice",
  "description": "Pebble backoffice",
  "keywords": [
    "cms",
    "backoffice",
    "pebble",
    "laravel"
  ],
  "homepage": "https://github.com/pebblecms/backoffice",
  "type": "laravel-package",
  "license": "MIT",
  "authors": [
    {
      "name": "Marc Guinea",
      "email": "develop.marcguinea@gmail.com",
      "homepage": "https://www.marcguinea.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php" : "^7.3",
    "illuminate/database": "^6.0",
    "illuminate/support": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.4",
    "orchestra/testbench": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "Pebble\\Backoffice\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pebble\\Backoffice\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Pebble\\Backoffice\\BackofficeServiceProvider"
      ]
    }
  }
}